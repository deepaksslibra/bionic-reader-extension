{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "description": "This is a simple Chrome extension example",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "activeTab"
    ]
  }
  