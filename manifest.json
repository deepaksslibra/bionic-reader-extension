{
    "manifest_version": 3,
    "name": "Bionic Reader",
    "version": "1.0",
    "description": "Extract and display text in bionic reading format",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "scripts/background.js"
    }
}
  